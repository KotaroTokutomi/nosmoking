



  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <h2 class="text-center font-weight-bold pt-5">新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
          <div class="field pt-3">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field pt-3">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上が有効です)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field pt-3">
            <%= f.label :もう一度入力してください %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="field pt-3">
            <%= f.label :一日に吸うたばこの本数 %><br />
            <%= f.number_field :tabako, autocomplete: "tabako" %>
          </div>

          <div class="field pt-3">
            <%= f.label :プロフィール %><br />
            <%= f.text_area :profile, autofocus: true %>
          </div>

          <div class="actions pt-3">
            <%= f.submit "登録する", class: "btn btn-primary" %>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>

  
